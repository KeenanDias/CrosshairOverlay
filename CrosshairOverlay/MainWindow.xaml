<Window x:Class="CrosshairOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crosshair Config" Height="550" Width="350" 
        Background="#2D2D30" Foreground="White">

    <ScrollViewer>
        <StackPanel Margin="15">
            <TextBlock Text="Crosshair Editor" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <Border BorderBrush="#444" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Shape" FontWeight="Bold" Margin="0,0,0,5"/>

                    <DockPanel Margin="0,5">
                        <TextBlock Text="Thickness" Width="70"/>
                        <Slider Minimum="1" Maximum="20" Value="{Binding Thickness}"/>
                    </DockPanel>

                    <DockPanel Margin="0,5">
                        <TextBlock Text="Length" Width="70"/>
                        <Slider Minimum="1" Maximum="100" Value="{Binding Length}"/>
                    </DockPanel>

                    <DockPanel Margin="0,5">
                        <TextBlock Text="Gap" Width="70"/>
                        <Slider Minimum="0" Maximum="100" Value="{Binding Gap}"/>
                    </DockPanel>

                    <CheckBox Content="Show Center Dot" IsChecked="{Binding ShowDot}" Foreground="White" Margin="0,5"/>
                    <DockPanel Margin="0,5" IsEnabled="{Binding ShowDot}">
                        <TextBlock Text="Dot Size" Width="70"/>
                        <Slider Minimum="1" Maximum="20" Value="{Binding DotSize}"/>
                    </DockPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="#444" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Colors" FontWeight="Bold" Margin="0,0,0,5"/>

                    <TextBlock Text="Inner Color (RGB)" Foreground="LightGray" Margin="0,5"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding MainR}" Margin="0,2"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding MainG}" Margin="0,2"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding MainB}" Margin="0,2"/>
                    <Rectangle Height="10" Fill="{Binding MainBrush}" Margin="0,5"/>

                    <Separator Background="#555" Margin="0,10"/>
                    <CheckBox Content="Enable Outlines" IsChecked="{Binding ShowOutlines}" Foreground="White" Margin="0,5"/>

                    <StackPanel IsEnabled="{Binding ShowOutlines}">
                        <DockPanel Margin="0,5">
                            <TextBlock Text="Thickness" Width="70"/>
                            <Slider Minimum="1" Maximum="5" Value="{Binding OutlineThickness}"/>
                        </DockPanel>

                        <TextBlock Text="Outline Color (RGB)" Foreground="LightGray" Margin="0,5"/>
                        <Slider Minimum="0" Maximum="255" Value="{Binding OutR}" Margin="0,2"/>
                        <Slider Minimum="0" Maximum="255" Value="{Binding OutG}" Margin="0,2"/>
                        <Slider Minimum="0" Maximum="255" Value="{Binding OutB}" Margin="0,2"/>
                        <Rectangle Height="10" Fill="{Binding OutlineBrush}" Margin="0,5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>